#!/usr/bin/env bash
source ~/.theme/shell

if [[ "$(cat ~/.system/message-state)" != "1" ]]; then
	exit
fi

dot_color=($(sed '1q;d' ~/.system/message-color | tr ' ' '\n'))
index=$(sed '2q;d' ~/.system/message-color | tr ' ' '\n')

sed -i '2 d' ~/.system/message-color
if [[ "$index" == "$((${#dot_color[@]}-1))" ]]; then
	echo 0 >> ~/.system/message-color
else
	echo $((index+1))  >> ~/.system/message-color
fi

printf "â—\n\n${dot_color[index]}"


