#!/usr/bin/env bash
source ~/.theme/shell
if sc isjack; then
	icon=""
else
	icon=""
fi
if [ "$(< ~/.system/max-volume)" != "--allow-boost" ]; then
	COLOR="$base0C"
else
	COLOR="$base0F"
fi
if sc ismute; then
	COLOR="$base05"
	printf "<span color='$COLOR'>$icon </span>"
	printf "<span color='$COLOR' font_style='italic'>$(sc getvol)</span>"
else
	printf "<span color='$COLOR'>$icon $(sc getvol)</span>"
fi

