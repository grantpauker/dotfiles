#!/usr/bin/env bash
QUALITY=$(cat /proc/net/wireless | awk 'END { print $3 }' | sed 's/\.$//')
echo -e -n "- $QUALITY\n\n"
if [[ $QUALITY -ge 80 ]]; then
    printf "#C3E88D"
elif [[ $QUALITY -lt 80 ]]; then
    printf "#FFCB6B"
elif [[ $QUALITY -lt 60 ]]; then
    printf "#F78C6C"
elif [[ $QUALITY -lt 40 ]]; then
    printf "#FF5370" 
fi
