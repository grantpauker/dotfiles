alias uenv='deactivate'

alias ocean='play -nq synth brownnoise synth pinknoise mix synth 0 0 0 10 10 40 trapezium amod 0.1 30'

alias slf='sudo lf'
alias -g '***=**/*(.)'
alias -g '*!=$(fd -t f | fzf)'
