#!/usr/bin/env zsh
alias rsc='source ~/.zshrc'
alias cclip='xclip -sel clip'
alias clipdir='echo -n $PWD | cclip'
alias hclip='clip $(fc -ln -1)'
alias renet='sudo systemctl restart NetworkManager'

alias s='sudo '
alias su='su -p'
alias srm='sudo rm'
alias sv='sudo -E $EDITOR'
alias sp='sudo pacman'
alias v='$EDITOR'
alias vi='$EDITOR'
alias vim='$EDITOR'
alias yt=youtube-dl
alias o='$OPENER'

alias cfi3='$EDITOR ~/.config/i3/config'
alias cfi3blocks='$EDITOR ~/.config/i3blocks/config'
alias cfaliases='$EDITOR $ZDOTDIR/.aliases'
alias cffunctions='$EDITOR $ZDOTDIR/.functions'
alias cfnvim='$EDITOR ~/.config/nvim/init.vim'
alias cfzsh='$EDITOR $ZDOTDIR/.zshrc'
