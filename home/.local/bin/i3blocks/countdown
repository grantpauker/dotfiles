#!/usr/bin/env bash
FILE=~/.data/polybar-countdown
[[  -a $FILE ]] || exit
function show_time () {
    num=$1
    min=0
    hour=0
    day=0
    if((num>59));then
        ((sec=num%60))
        ((num=num/60))
        if((num>59));then
            ((min=num%60))
            ((num=num/60))
            if((num>23));then
                ((hour=num%24))
                ((day=num/24))
            else
                ((hour=num))
            fi
        else
            ((min=num))
        fi
    else
        ((sec=num))
    fi
		[[ $day -gt 0 ]] && printf '%02d:' "$day"
		[[ $hour -gt 0 ]] && printf '%02d:' "$hour"
		printf '%02d:' "$min"
		printf '%02d' "$sec"
}
color=$(xgetres red)
now=$(date '+%s')
later=$(cat $FILE)
msg=$(show_time $((later-now)))
echo $msg | rg -q "-" && rm $FILE && exit
printf "$msg\n\n$color\n"
