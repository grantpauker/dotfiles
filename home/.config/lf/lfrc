set previewer ~/.config/lf/preview
set info size
set color256 true

cmd open $$OPENER $fx

map gp  cd ~/projects
map gdc cd ~/Documents
map gdo cd ~/Downloads
map gr  cd /
map gm  cd /media
map gP  cd ~/Pictures
map gp  cd ~/Pictures
map gd  cd ~/Downloads
map gD  cd ~/Documents
map gs  cd ~/shit
map m push $mkdir<space>
map t push $touch<space>
map <delete> delete
map C %code .
map a &alacritty ---working-directory .
map bs  $mountpoint ~/shit &>> /dev/null && fusermount -u ~/shit|| encfs ~/.shit ~/shit

set shellopts '-eu'
set ifs "\n"

cmd vidir ${{
	if [ -n "${fs}" ]; then
		echo "$fs"
	else
		ls -N1 
	fi | xargs -d '\n' -L1 realpath --relative-base=. | xargs -d '\n' vidir
}}

map r vidir
